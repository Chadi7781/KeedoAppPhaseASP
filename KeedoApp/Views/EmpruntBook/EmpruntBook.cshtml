@model IEnumerable<KeedoApp.Models.EmpruntBook>

@{
    ViewBag.Title = "EmpruntBook";
}

<div class="col-12">
    <div class="page-title-box d-flex align-items-center justify-content-between">
        <h2 class="mb-0">EmpruntBook</h2>
    </div>
</div>
<br />
<br />



<table  class="table table-primary table-striped mb-0">
    <thead>
        <tr class="bg-transparent">
            <th>
                <div class="form-check text-center">
                    <input type="checkbox" class="form-check-input" id="invoicecheck">
                    <label class="form-check-label" for="invoicecheck"></label>
                </div>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmprunt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DebutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prolonge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rendu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="form-check text-center">
                        <input type="checkbox" class="form-check-input" id="invoicecheck1">
                        <label class="form-check-label" for="invoicecheck1"></label>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEmprunt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DebutDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prolonge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rendu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    <a class="has-arrow waves-effect">
                        @Html.ActionLink("Details", "Details", new { idEmprunt = item.IdEmprunt }) |<i class="uil-invoice"></i>
                    </a>

                    <a class="px-3 text-primary"> @Html.ActionLink("Edit", "Edit", new { idEmprunt = item.IdEmprunt }) |<i class="uil uil-pen font-size-18"> </i></a>
                    <a class="px-3 text-danger"> @Html.ActionLink("Delete", "Delete", new { idEmprunt = item.IdEmprunt })<i class="uil uil-trash-alt font-size-18"></i></a>



                </td>

            </tr>
        }

</table>
<br />


<div class="col-sm-6">
    <div class="float-sm-end">
        <ul class="pagination mb-sm-0">
            <li class="page-item disabled">
                <a href="#" class="page-link"><i class="mdi mdi-chevron-left"></i></a>
            </li>
            <li class="page-item active">
                <a href="#" class="page-link">1</a>
            </li>
            <li class="page-item ">
                <a href="#" class="page-link">2</a>
            </li>
            <li class="page-item">
                <a href="#" class="page-link">3</a>
            </li>
            <li class="page-item">
                <a href="#" class="page-link"><i class="mdi mdi-chevron-right"></i></a>
            </li>
        </ul>
    </div>
</div>