




@model IEnumerable<KeedoApp.Models.Event>

@{
    ViewBag.Title = "ListEvent";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="PlaceHolderHere"></div>

<div class="page-content">
    <div class="container-fluid">
        <p></p>
     

        <div class="row">

            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="float-end mt-2">
                            <div id="orders-chart"></div>
                        </div>
                        <div>
                            <h4 class="mb-1 mt-1">$ @ViewBag.collAmount<span data-plugin="counterup">Mo</span></h4>
                            <p class="text-muted mb-0">Top One Events View <span style="color:green;">@ViewBag.TopEventName</span> </p>
                        </div>
                        <p class="text-muted mt-3 mb-0">
                            <span class="text-success me-1">

                                <i class="uil-arrow-up"></i> @((((int)@ViewBag.Average) /(double)100))


                            </span> Average Events
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="float-end mt-2">
                            <div id="orders-chart"></div>
                        </div>
                        <div>
                            <h4 class="mb-1 mt-1">$ @ViewBag.collAmount<span data-plugin="counterup">Mo</span></h4>
                            <p class="text-muted mb-0">Top One Events View <span style="color:green;">@ViewBag.TopEventName</span> </p>
                        </div>
                        <p class="text-muted mt-3 mb-0">
                            <span class="text-success me-1">

                                <i class="uil-arrow-up"></i> @((((int)@ViewBag.Average) /(double)100))


                            </span> Average Events
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="float-end mt-2">
                            <div id="orders-chart"></div>
                        </div>
                        <div>
                            <h4 class="mb-1 mt-1">$ @ViewBag.collAmount<span data-plugin="counterup">Mo</span></h4>
                            <p class="text-muted mb-0">Top One Events View <span style="color:green;">@ViewBag.TopEventName</span> </p>
                        </div>
                        <p class="text-muted mt-3 mb-0">
                            <span class="text-success me-1">

                                <i class="uil-arrow-up"></i> @((((int)@ViewBag.Average) /(double)100))


                            </span> Average Events
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card">
                    <div class="card-body">
                        <div class="float-end mt-2">
                            <div id="orders-chart"></div>
                        </div>
                        <div>
                            <h4 class="mb-1 mt-1">$ @ViewBag.collAmount<span data-plugin="counterup">Mo</span></h4>
                            <p class="text-muted mb-0">Top One Events View <span style="color:green;">@ViewBag.TopEventName</span> </p>
                        </div>
                        <p class="text-muted mt-3 mb-0">
                            <span class="text-success me-1">

                                <i class="uil-arrow-up"></i> @((((int)@ViewBag.Average) /(double)100))


                            </span> Average Events
                        </p>
                    </div>
                </div>
            </div>

        </div><!-- end col-->

        <!-- start page title -->
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div>
                    <div class="float-end">
                        <form class="d-inline-flex mb-3">
                            <label class="form-check-label my-2 me-2" for="order-selectinput">Orders</label>
                            <select class="form-select" id="order-selectinput">
                                <option selected>All</option>
                                <option value="1">Active</option>
                                <option value="2">Unpaid</option>
                            </select>
                        </form>

                    </div>
                    <a href="@Url.Action("AddStock","Stock")">
                        <button type="button" class="btn btn-success waves-effect waves-light mb-3"><i class="uil-plus "></i> Add New Events</button>

                    </a>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-centered datatable dt-responsive nowrap table-card-list dataTable no-footer dtr-inline" style="        background-color: #F0F0F0;
        collapse;
        border-spacing: 0px 12px;
        width: 100%;" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                            <thead>
                                <tr class="bg-transparent" role="row">
                                    <th style="width: 24px;" class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="




                                                : activate to sort column descending">
                                        <div class="form-check text-center font-size-16">
                                            <input type="checkbox" class="form-check-input" id="ordercheck">
                                            <label class="form-check-label" for="ordercheck"></label>
                                        </div>
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 95px;" aria-label="Title: activate to sort column ascending">Title</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 105px;" aria-label="Date: activate to sort column ascending">Date</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 133px;" aria-label="Ticket Price: activate to sort column ascending">Ticket Price</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 63px;" aria-label="Views: activate to sort column ascending">Views</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 163px;" aria-label="Total Places: activate to sort column ascending">Total Places</th>
                                    <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 163px;" aria-label="Total Places: activate to sort column ascending">Status</th>
                                    <th style="width: 120px;" class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Action: activate to sort column ascending">Action</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in ViewBag.events)
                                {
                                    <tr role="row" class="odd">
                                        <td class="sorting_1 dtr-control">
                                            <div class="form-check text-center font-size-16">
                                                <input type="checkbox" class="form-check-input" id="ordercheck1">
                                                <label class="form-check-label" for="ordercheck1"></label>
                                            </div>
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @Html.FormatValue("yyy-MM-dd", item.Date.ToString("yyy-MM-dd"))

                                        </td>

                                        <td>
                                            @item.Views

                                        </td>


                                        <td>
                                            @item.TicketPrice

                                        </td>
                                        <td>
                                            @item.PlaceNbr

                                        </td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <div class="badge bg-pill bg-soft-success font-size-12">Sponsored</div>

                                            }
                                            else
                                            {
                                                <div class="badge bg-pill bg-soft-danger font-size-12">Unsponsored</div>
                                            }





                                        </td>


                                        <td>
                                            <a href="javascript:void(0);" class="px-3 text-primary"><i class="uil uil-pen font-size-18"></i></a>
                                            <a href="javascript:void(0);" class="px-3 text-danger"><i class="uil uil-trash-alt font-size-18"></i></a>
                                            <button style="background:none;border:none;" class="px-3 text-success"
                                                    data-toggle="ajax-modal" data-target="#detailEvent" data-url="@Url.Action($"Detail/{item.IdEvenement}")">
                                                <i class="uil uil-ellipsis-v font-size-18"></i>
                                            </button>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

    </div> <!-- container-fluid -->
</div>
<!-- End Page-content -->
