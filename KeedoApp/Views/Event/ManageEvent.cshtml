                                                    <i class="uil uil-pen font-size-18"></i>
                                                </button>


                                                <button type="button" id="btnDelete" style="background:none;border:none;" class="px-3 text-danger" onclick="confirmDelete(@item.IdEvenement)"><i class="uil uil-trash-alt font-size-18"></i></button>

                                                <button style="background:none;border:none;" class="px-3 text-success"
                                                        data-toggle="ajax-modal" data-target="#detailEvent" data-url="@Url.Action($"DetailEvent/{item.IdEvenement}")">
                                                                                                        

                                                   

                                                    <i class="uil uil-ellipsis-v font-size-18"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-info waves-effect waves-light"
                                                        onclick="affecterEvent(@item.IdEvenement)">
                                                    Affecter
                                                </button>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>
            </div>


        </div> <!-- container-fluid -->

        <br />
        <br />
        <br />
        <br />

    </div>
