    <script type="text/javascript">


        //Remove Event SweetAlert+jquery+ajax
        function confirmDelete(idEvent) {
            swal({
                title: "Are you sure?",
                text: "You will not be able to recover this imaginary file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#f42020",
                confirmButtonText: "Yes, delete it!",
                closeOnConfirm: false
            }).then(function (isConfirm) {
                if (isConfirm.value) {
                    $.ajax({
                        url: "/Event/DeleteEvent",
                        type: "POST",
                        data: { id: idEvent },
                        success: function (data) {
                            console.log("dara" + data);
                            if (data.status) {
                                swal("Done!", "It was succesfully deleted!", "success");
                                setInterval('refreshPage()', 2000);
                            }

                        }
                    });
                } else {
                    swal("Cancelled", "Failed to delete event :)", "error");
                }
            })


        }





        //Affecter category evetnt
        function affecterEvent(id) {

            console.log("hii id event = " + id)// manish nesm fik douda

            swal({
                title: 'Select Outage Tier',
                input: 'select',
                inputOptions: {
                    'FILM': 'FILM',
                    'THEATRE': 'THEATRE',
                    'SOLIDARITY_PROJECT': 'SOLIDARITY_PROJECT'
                },
                inputPlaceholder: 'required',
                showCancelButton: true,
                closeOnConfirm: false,
                inputValidator: function (value) {
                    return new Promise(function (resolve, reject) {
                        if (value !== '') {
                            resolve();
                        } else {
                            resolve('You need to select a Tier');
                        }
                    });
                }
            }).then(function (result) {
                if (!result.isConfirmed) {

                    //ajax request
                    $.ajax({
                        url: "/Event/Affecter",
                        type: "POST",
                        data: { category: result.value, id: id },
                        success: function (data) {
                            console.log("dara" + data);
                            console.log("id" + id);
                            console.log("category" + result.value);
                            console.log("datra" + data.response);
                            if (data.status) {
                                swal({
                                    icon: 'success',
                                    html: 'You selected: ' + result.value
                                });
                                setInterval('refreshPage()', 2000);
                            }

                        }
                    });



                    //
                    swal("Done!", "you selected category " + result.value, "success");

                }
            });



        }

        function refreshPage() {
            location.reload(true);
        }
    </script>




