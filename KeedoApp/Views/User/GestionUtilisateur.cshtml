@model IEnumerable<KeedoApp.Models.User>
@{
    ViewBag.Title = "GestionUtilisateur";
}

<h2>GestionUtilisateur</h2>
<form>
    <p>
        Search: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />

    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.birthdate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.users)
    {
<tr>
    <td>
        @item.idUser
    </td>
    <td>
        @item.firstName
    </td>
    <td>
        @item.lastName
    </td>
    <td>
        @item.address
    </td>

    <td>
        @item.birthdate
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.idUser }) |
        @Html.ActionLink("Details", "Details", new { id = item.idUser }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.idUser })|

        @if (item.Valid == true)
        {
            @Html.ActionLink("Desactiver User", "DesactiverUser", new { id = item.idUser })
        }
        else
        {
            @Html.ActionLink("Activer User", "ActiverUser", new { id = item.idUser })
        }

    </td>
</tr>
    }

</table>