@model IEnumerable<KeedoApp.Models.Role>

@{
    ViewBag.Title = "GestionRole";
}

<h2>GestionRole</h2>
<p>
    @Html.ActionLink("CreateRole", "CreateRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdRole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.roles)
    {
        <tr>
            <td>
                @item.IdRole
            </td>
            <td>
                @item.Description
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { /*id = item.idRole **/ }) |
                @Html.ActionLink("DeleteRole", "DeleteRole", new { id = item.idRole })
            </td>
        </tr>
    }

</table>
