@model IEnumerable<KeedoApp.Models.Book>

@{
    ViewBag.Title = "Book";
}

<div class="col-12">
    <div class="page-title-box d-flex align-items-center justify-content-between">
        <h2 class="mb-0">Book List</h2>
    </div>
</div>
<div class="col-md-4">
    <div>
        <button type="button" class="btn btn-success waves-effect waves-light mb-3"><i class="uil uil-file-alt me-1"></i>    @Html.ActionLink("Create New", "Create", null, new { id = "OT", style = "color: White" })</button>
    </div>
</div>


<table style="border-collapse: collapse; border-spacing: 0 12px; width: 100%;">
    <thead>
        <tr class="bg-transparent">
            <th>
                <div class="form-check text-center">
                    <input type="checkbox" class="form-check-input" id="invoicecheck">
                    <label class="form-check-label" for="invoicecheck"></label>
                </div>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuteurNom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuteurPrenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etiquette)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockDisponible)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="form-check text-center">
                        <input type="checkbox" class="form-check-input" id="invoicecheck1">
                        <label class="form-check-label" for="invoicecheck1"></label>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuteurNom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuteurPrenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Collection)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Etiquette)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockDisponible)
                </td>
                <td>

                    <a class="px-3 text-primary">@Html.ActionLink("Edit", "Edit", new { Id = item.Id }) |<i class="uil uil-pen font-size-18"> </i></a>

                    <a class="px-3 text-danger"> @Html.ActionLink("Delete", "Delete", new { Id = item.Id })|<i class="uil uil-trash-alt font-size-18"></i></a>

                    |


                </td>
            </tr>
        }
    </tbody>
</table>
