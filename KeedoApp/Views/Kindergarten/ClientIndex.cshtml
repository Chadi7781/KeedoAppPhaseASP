@model IEnumerable<KeedoApp.Models.Kindergarden>



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3 class="text-primary">Latest Kindergartens</h3>
           



                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-xl-4 col-sm-6">
                            <div class="product-box">


                                <div class="product-img pt-4 px-4">
                                   
                                  
                                    <img src="~/FrontEnd/assets/images/kinder.jpg" alt="" class="img-fluid mx-auto d-block" style="width:50%">
                                </div>

                                <div class="text-center product-content p-4">

                                    <h5 class="mb-1"><a href="#" class="text-dark"> @Html.DisplayFor(modelItem => item.Name)</a></h5>
                                    <p class="text-muted font-size-13"> @Html.DisplayFor(modelItem => item.Location)</p>


                                    <ul class="list-inline mb-0 text-muted product-color">
                                        <li class="list-inline-item">
                                            Kids :
                                        </li>
                                        <li class="list-inline-item">
                                            <i >@ViewBag.kids</i>
                                        </li>

                                    </ul>

                              


                                </div>
                            </div>
                        </div>
                    }
                
                </div>
                <!-- end row -->
                <!-- end table-responsive -->
            </div>
        </div>
    </div>
</div>
<!-- end row -->
