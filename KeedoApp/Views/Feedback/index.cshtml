@model IEnumerable<KeedoApp.Models.Feedback>



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4>Latest Feedbacks</h4>
                @Html.ActionLink("Create Feedback", "Create", null, new { @class = "btn btn-success waves-effect waves-light", @style = "margin-left:85%" })

                </br> </br>
                </br>
                <div class="table-responsive">
                    <table class="table table-centered table-nowrap mb-0">
                        <thead class="table-light">


                            <tr>
                                <th style="width: 20px;">
                                    <div class="form-check font-size-16">
                                        <input type="checkbox" class="form-check-input" id="customCheck1">
                                        <label class="form-check-label" for="customCheck1">&nbsp;</label>
                                    </div>
                                </th>
                                <th>Feedback ID</th>
                                <th>Feedback Title</th>
                                <th>Feedback Description</th>
                                <th>Relevent Meeting </th>
                                <th>Parent Name</th>

                                <th>Created At</th>
                                <th>Updated At</th>

                                <th>Action</th>
                            </tr>


                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <div class="form-check font-size-16">
                                        <input type="checkbox" class="form-check-input" id="customCheck2">
                                        <label class="form-check-label" for="customCheck2">&nbsp;</label>
                                    </div>
                                </td>
                                <td><a href="javascript: void(0);" class="text-body fw-bold"></a>   @Html.DisplayFor(modelItem => item.IdFeedback)</td>
                                <td>  @Html.DisplayFor(modelItem => item.Title)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>





                                <td>
                                    @Html.DisplayFor(modelItem => item.Meeting.TypeMeeting)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Meeting.Users.Login)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                                @if (item.UpdatedAt != null)
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedAt)
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        Not Updated Yet
                                    </td>
                                }

                                <td>

                                    <!-- Button trigger modal -->


                                    <i class="uil uil-pen font-size-18 text-primary" onclick="location.href = '@(Url.Action("Edit", new { id = item.IdFeedback }))'"> </i>
                                    <i class="uil uil-eye font-size-18 text-dark" onclick="location.href = '@(Url.Action("Details", new { id = item.IdFeedback }))'"> </i>

                                    <i class="uil uil-trash font-size-18 text-danger" onclick="location.href = '@(Url.Action("Delete", new { id = item.IdFeedback }))'"> </i>

                                </td>
                            </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <!-- end table-responsive -->
            </div>
        </div>
    </div>
</div>
<!-- end row -->


