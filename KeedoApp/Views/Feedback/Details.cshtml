@model KeedoApp.Models.Feedback
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .checked {
        color: orange;
    }
</style>

<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <a href="index.html" class="mb-5 d-block auth-logo">
                        <img src="assets/images/logo-dark.png" alt="" height="22" class="logo logo-dark">
                        <img src="assets/images/logo-light.png" alt="" height="22" class="logo logo-light">
                    </a>
                </div>
            </div>
        </div>




        <div class="row align-items-center justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">

                    <div class="card-body p-4">

                        <div class="text-center mt-2">
                            <h3 class="text-primary"> Feedback Details</h3>
                            <p class="text-muted">You can see the details of the meeting feedback </p>
                        </div>
                        <div class="p-2 mt-4">



                            <div class="mb-3">
                                <label class="control-label col-md-5 "> </label>

                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.Description)
                                </div>



                            </div>

                            <dt>
                                @Html.DisplayNameFor(model => model.Questions)
                            </dt>
                            @foreach (var item in ViewBag.questions)
                            {

                                if (@item.Type == ViewBag.satisfaction)
                                {
                                    <h6>Q : @item.Questions</h6>
                                    <dd>



                                        @item.Response.SatisfactionDegree

                                    </dd>
                                }
                                else if (@item.Type == ViewBag.text)
                                {

                                    <h6>Q : @item.Questions</h6>

                                    @item.Response.Responses

                                }
                                else
                                {
                                    <h6>Q : @item.Questions</h6>
                                    for (int i = 0; i < @item.Response.Rating; i++)
                                    {
                                        <span class="fa fa-star checked"></span>

                                    }


                                }
                            }


                            <div class="form-actions no-color " style="margin-left:50%">
                                @Html.ActionLink("Edit", "Edit", new { id = Model.IdFeedback }, new { @class = "btn btn-success waves-effect waves-light" })|
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-dark waves-effect waves-light" })
                            </div>
                        </div>

                    </div>
                </div>


            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>









<div style="margin-left:50px">
    <h4>Feedback</h4>
    <hr />
    <dl class="dl-horizontal">
   

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Meeting)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Meeting.TypeMeeting)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Questions)
        </dt>
        @foreach (var item in ViewBag.questions)
        {

            if (@item.Type == ViewBag.satisfaction)
            {
                @item.Questions
                <dd>



                    @item.Response.SatisfactionDegree

                </dd>
            }
            else if (@item.Type == ViewBag.text)
            {

                @item.Questions

                @item.Response.Responses

            }
            else
            {
                @item.Questions
                for (int i = 0; i < @item.Response.Rating; i++)
                {
                    <span class="fa fa-star checked"></span>

                }


            }
        }

        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>

    </dl>
</div>
<p style="margin-left:50px">
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdFeedback }) |
    @Html.ActionLink("Back to List", "Index")
</p>
