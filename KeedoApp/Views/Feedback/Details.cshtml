@model KeedoApp.Models.Feedback
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .checked {
        color: orange;
    }

</style>
<div style="margin-left:50px">
    <h4>Feedback</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IdFeedback)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdFeedback)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Meeting)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Meeting.TypeMeeting)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Questions)
        </dt>
        @foreach (var item in ViewBag.questions)
        {

            if (@item.Type == ViewBag.satisfaction)
            {
                @item.Questions
                <dd>



                    @item.Response.SatisfactionDegree

                </dd>
            }
            else if (@item.Type == ViewBag.text)
            {

                @item.Questions

                @item.Response.Responses

            }
            else
            {
                @item.Questions
                for (int i=0; i < @item.Response.Rating; i++)
                {
    <span class="fa fa-star checked"></span>
                
                }


            }
        }

        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>

    </dl>
</div>
<p style="margin-left:50px">
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdFeedback }) |
    @Html.ActionLink("Back to List", "Index")
</p>
