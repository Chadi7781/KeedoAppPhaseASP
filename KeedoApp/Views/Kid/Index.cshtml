@model IEnumerable<KeedoApp.Models.Kid>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    @Html.Partial("_Notifications")
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.birthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            Daycare
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.firstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.lastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.birthDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.gender)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.address)
    </td>
    <td>
        @if (item.affect.Equals("Affected"))
        {
            <img src="https://img.icons8.com/office/30/000000/checked--v2.png" />
        }
        else
        {
            <img src="https://img.icons8.com/flat-round/30/000000/delete-sign.png" />
        }
    </td>
    <td>
        @Html.ActionLink("Affect", "Affect", new { idk = item.idKid }) |
        @Html.ActionLink("Disaffect", "Disaffect", new { idk = item.idKid }) |
        @Html.ActionLink("Edit", "Edit", new { id = item.idKid }) |
        @Html.ActionLink("Details", "Details", new { id = item.idKid }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.idKid })
    </td>
</tr>
    }

</table>
